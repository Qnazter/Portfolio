<body>
  <div class="bg-move" aria-hidden="true"></div>

  <div class="card" role="status" aria-live="polite">
    <h1>Not available now</h1>
    <div class="bar" aria-hidden="true"></div>
    <p class="subtitle">ขออภัย หน้านี้ยังไม่พร้อมใช้งาน — ลองกลับมาใหม่ภายหลัง</p>
  </div>

  <div class="particles" aria-hidden="true" id="particles"></div>

  <script>
    // create a few drifting particles for subtle motion
    const pWrap = document.getElementById('particles');
    const COUNT = 14;
    for(let i=0;i<COUNT;i++){
      const el = document.createElement('div');
      el.className = 'particle' + (Math.random()>0.6 ? ' alt' : '');
      el.style.left = (Math.random()*100)+'%';
      el.style.top = (90 + Math.random()*10)+'%'; // start near bottom
      el.style.animationDuration = (6 + Math.random()*8)+'s';
      el.style.opacity = (0.2 + Math.random()*0.8).toFixed(2);
      el.style.transform = `translate3d(0,0,0) scale(${0.6+Math.random()*1.2})`;
      pWrap.appendChild(el);
    }

    // small accessibility: press space to toggle a hint (no navigation change)
    window.addEventListener('keydown', e => {
      if(e.code === 'Space'){
        const subtitle = document.querySelector('.subtitle');
        subtitle.textContent = subtitle.textContent.includes('ลองกลับมา') ? 'กด Space อีกครั้งเพื่อดูข้อความ' : 'ขออภัย หน้านี้ยังไม่พร้อมใช้งาน — ลองกลับมาใหม่ภายหลัง';
      }
    });
  </script>
</body>
